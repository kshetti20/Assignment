<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/profileIV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

        <TextView
            android:id="@+id/nameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{user.name.first+' '+user.name.last}"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/profileIV"
            android:layout_margin=".5dp"
            />


        <TextView
            android:id="@+id/phoneTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{user.phone}"
            app:layout_constraintTop_toBottomOf="@+id/nameTV"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/emailV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/phoneTV"
            android:gravity="center"
            android:text="@{user.email}"
            android:textSize="15sp" />


        <ImageView
            android:id="@+id/acceptIV"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.5"
            android:layout_height="80dp"
            android:src="@drawable/accept"
            app:layout_constraintEnd_toStartOf="@+id/declineIV"
            app:layout_constraintTop_toBottomOf="@+id/emailV"/>

        <ImageView
            android:id="@+id/declineIV"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.5"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@+id/emailV"
            android:src="@drawable/decline"
            app:layout_constraintStart_toEndOf="@+id/acceptIV"/>

        <TextView
            android:id="@+id/acceptamceStatusTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/emailV"
            android:gravity="center"
            android:textSize="50sp"
            android:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>

        <variable
            name="user"
            type="myapp.kshetti.trialapp.model.Results" />
    </data>

</layout>
