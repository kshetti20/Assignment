<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/profileIV"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:layout_margin=".5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:layout_margin=".5dp">

                <TextView
                    android:id="@+id/nameTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profileIV"
                    android:gravity="center"
                    android:text="@{user.name.first+' '+user.name.last}"
                    android:textSize="30sp" />


                <TextView
                    android:id="@+id/phoneTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/emailV"
                    android:gravity="center"
                    android:text="@{user.phone}"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/emailV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nameTV"
                    android:gravity="center"
                    android:text="@{user.email}"
                    android:textSize="15sp" />


                <LinearLayout
                    android:id="@+id/acceptanceViewLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/phoneTV"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/acceptIV"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="0.5"
                        android:src="@drawable/accept" />

                    <ImageView
                        android:id="@+id/declineIV"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="0.5"
                        android:src="@drawable/decline" />

                </LinearLayout>
                <TextView
                    android:id="@+id/acceptamceStatusTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/acceptanceViewLL"
                    android:gravity="center"
                    android:textSize="50sp"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <data>

        <variable
            name="user"
            type="myapp.kshetti.trialapp.model.Results" />
    </data>

</layout>
