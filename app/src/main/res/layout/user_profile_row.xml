<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/acceptIV"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:src="@drawable/accept"
            app:layout_constraintEnd_toStartOf="@+id/declineIV"
            app:layout_constraintTop_toBottomOf="@+id/emailV"
            app:layout_constraintWidth_percent="0.5" />


        <ImageView
            android:id="@+id/declineIV"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:src="@drawable/decline"
            app:layout_constraintStart_toEndOf="@+id/acceptIV"
            app:layout_constraintTop_toBottomOf="@+id/emailV"
            app:layout_constraintWidth_percent="0.5" />


        <TextView
            android:id="@+id/emailV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{user.email}"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/phoneTV" />

        <TextView
            android:id="@+id/phoneTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{user.phone}"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/emailV" />

        <TextView
            android:id="@+id/acceptamceStatusTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="50sp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/emailV" />

        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintTop_toTopOf="parent"
            card_view:cardCornerRadius="10dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/profileIV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/iv_corner"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/relegionTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintStart_toStartOf="parent"
                    android:text="Hindu, Valmiki"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="30dp"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/physicTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:layout_constraintBottom_toTopOf="@+id/relegionTV"
                    card_view:layout_constraintStart_toStartOf="parent"
                    android:text="26 yrs, 5.3'"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/white"
                    />

                <ImageView
                    android:id="@+id/approvedIV"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    card_view:layout_constraintBottom_toTopOf="@+id/physicTV"
                    card_view:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/approved"
                    android:layout_marginRight="15dp"
                  />

                <TextView
                    android:id="@+id/nameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{user.name.first+' '+user.name.last}"
                    android:textSize="15sp"
                    card_view:layout_constraintBottom_toTopOf="@+id/physicTV"
                    card_view:layout_constraintStart_toEndOf="@+id/approvedIV"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>

        <variable
            name="user"
            type="myapp.kshetti.trialapp.model.Results" />
    </data>

</layout>
